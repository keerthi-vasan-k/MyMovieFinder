@model MyMovieFinder.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1 style="font-size: 2em; color: #333; text-align: center; margin-bottom: 20px;">Details</h1>

<div style="padding: 20px; border: 1px solid #ccc; border-radius: 8px; background-color: #f9f9f9;">
    <h4 style="font-size: 1.5em; color: #444; border-bottom: 2px solid #333; padding-bottom: 5px;">Movie</h4>
    <hr style="border-top: 1px solid #ddd;" />
    <dl class="row" style="margin-top: 15px;">
        <dt class="col-sm-2" style="font-weight: bold; color: #555;">
            @Html.DisplayNameFor(model => model.MovieName)
        </dt>
        <dd class="col-sm-10" style="color: #333;">
            @Html.DisplayFor(model => model.MovieName)
        </dd>
        <dt class="col-sm-2" style="font-weight: bold; color: #555;">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10" style="color: #333;">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2" style="font-weight: bold; color: #555;">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10" style="color: #333;">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2" style="font-weight: bold; color: #555;">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class="col-sm-10" style="color: #333;">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class="col-sm-2" style="font-weight: bold; color: #555;">
            @Html.DisplayNameFor(model => model.Actor)
        </dt>
        <dd class="col-sm-10" style="color: #333;">
            @Html.DisplayFor(model => model.Actor)
        </dd>
        <dt class="col-sm-2" style="font-weight: bold; color: #555;">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10" style="color: #333;">
            @Html.DisplayFor(model => model.Year)
        </dd>
    </dl>
</div>

<div style="margin-top: 20px; text-align: center;">
    <a asp-action="Edit" asp-route-id="@Model?.Id" style="color: #007bff; text-decoration: none; padding: 10px 15px; border: 1px solid #007bff; border-radius: 4px; margin-right: 10px;">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model?.Id" style="color: #dc3545; text-decoration: none; padding: 10px 15px; border: 1px solid #dc3545; border-radius: 4px; margin-right: 10px;" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
    <a asp-action="Index" style="color: #007bff; text-decoration: none; padding: 10px 15px; border: 1px solid #007bff; border-radius: 4px;">Back to List</a>
</div>
